{
   "name": "vite-vue-typescript-starter",
   "private": true,
   "version": "0.0.0",
   "type": "module",
   "scripts": {
      "dev": "vite",
      "build": "vue-tsc -b && vite build",
      "preview": "vite preview",
      "tscheck": "vue-tsc --noEmit --skipLibCheck -p tsconfig.app.json",
      "prettier": "prettier --check \"src/**/*.{ts,tsx,vue,js,jsx,json,css,scss,md}\" \"*.{ts,js,json,md}\" \"*.config.{ts,js}\"",
      "prettier-fix": "prettier --write \"src/**/*.{ts,tsx,vue,js,jsx,json,css,scss,md}\" \"*.{ts,js,json,md}\" \"*.config.{ts,js}\"",
      "lint": "eslint \"src/**/*.{ts,tsx,vue}\" --quiet",
      "lint-fix": "eslint \"src/**/*.{ts,tsx,vue}\" --fix --quiet",
      "format": "npm run tscheck && npm run prettier && npm run lint",
      "format-fix": "npm run tscheck && npm run prettier-fix && npm run lint-fix"
   },
   "dependencies": {
      "@tailwindcss/vite": "^4.1.17",
      "@tiptap/pm": "^3.12.1",
      "@tiptap/starter-kit": "^3.12.1",
      "@tiptap/vue-3": "^3.12.1",
      "@vueuse/head": "^2.0.0",
      "pinia": "^3.0.4",
      "pinia-plugin-persistedstate": "^4.7.1",
      "tailwindcss": "^4.1.17",
      "vue": "^3.5.25",
      "vue-router": "^4.6.3",
      "vue-wswg-editor": "demo"
   },
   "devDependencies": {
      "@eslint/js": "^9.30.0",
      "@types/node": "^24.10.1",
      "@vitejs/plugin-vue": "^6.0.2",
      "@vitest/eslint-plugin": "^1.3.5",
      "@vue/eslint-config-prettier": "^10.2.0",
      "@vue/eslint-config-typescript": "^14.5.1",
      "@vue/tsconfig": "^0.8.1",
      "eslint": "^9.30.0",
      "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
      "eslint-plugin-vue": "^9.33.0",
      "prettier": "^3.6.2",
      "typescript": "~5.9.3",
      "vite": "^7.2.4",
      "vue-tsc": "^3.1.5"
   }
}
